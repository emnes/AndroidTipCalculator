<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.example.uihomies.androidtipcalculator.BillSummaryActivity">

    <TextView android:text="Bill Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/billSummaryLabel"
        android:layout_marginTop="46dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:textSize="30dp"
        android:textColor="@color/text" />

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/billSummaryLabel">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Bill Amount: "
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/billAmountLabel" />
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Tip Amount: "
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/tipAmountLabel" />
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:text="Total Amount: "
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/totalAmountLabel" />

            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Tip Per Person: "
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/tipPerPersonLabel" />
            <TextView
                android:layout_gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Each Person Pays: "
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/eachPersonPaysLabel" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content">

            <TextView
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/billAmount" />
            <TextView
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/tipAmount" />
            <TextView
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/totalAmount" />

            <TextView
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/tipPerPerson" />
            <TextView
                android:layout_gravity="left"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="20dp"
                android:textColor="@color/text"
                android:id="@+id/eachPersonPays" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
